<Page x:Class="SampleApplication.Pages.Layout.StackPanelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="StackPanel Layout"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <Rectangle Margin="7" Width="100" Height="100" Fill="Red" />
            <Rectangle Margin="7" Width="100" Height="100" Fill="Green" />
            <Rectangle Margin="7" Width="100" Height="100" Fill="Blue" />
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Rectangle Margin="7" Width="100" Height="100" Fill="Red" />
            <Rectangle Margin="7" Width="100" Height="100" Fill="Green" />
            <Rectangle Margin="7" Width="100" Height="100" Fill="Blue" />
        </StackPanel>
    </Grid>
</Page>
